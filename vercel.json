{
  "version": 2,
  "functions": {
    "server/index.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "client/dist/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}
