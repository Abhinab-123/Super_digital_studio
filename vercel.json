{
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/gallery/images", "destination": "/api" },
    { "source": "/attached_assets/(.*)", "destination": "/api/assets?file=$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.ts": { 
      "memory": 1024, 
      "maxDuration": 10,
      "includeFiles": "attached_assets/**"
    },
    "api/assets.ts": { 
      "memory": 256, 
      "maxDuration": 10,
      "includeFiles": "attached_assets/**"
    }
  }
}
